<h1> Mechanic</h1>

<div id="mechanic">
  <p>Name: <%= @mechanic.name %></p>

  <p>Years of Experience: <%= @mechanic.years_experience %></p>

  <h2> Rides that <%= @mechanic.name %> has worked on </h2>
  <% @mechanic.rides.each do |ride| %>
  <%= ride.name %> 
  <% end %>

  <div>
    <%= form_with url: "/mechanics/#{@mechanic.id}/rides", method: :post, local: true do |f| %>
      <%= f.label :ride_id %>
      <%= f.text_field :ride_id %>
      <%= f.submit "Add ride to mechanic" %>
    <% end %> 
  </div>
</div>